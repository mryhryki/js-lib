    "remark-rehype": "^10.1.0",
    "unified": "^10.1.2"
  },
  "devDependencies": {
    "@mryhryki/lint": "^0.0.14",
    "esbuild": "^0.17.19",
    "jest": "^28.0.3",
    "typescript": "^5.0.4"
  },
  "jest": {
    "testTimeout": 1000,
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/*.test.js"
    ]
  }
